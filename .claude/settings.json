{
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "echo '## Project Dependencies (package.json)' && cat \"$CLAUDE_PROJECT_DIR\"/package.json"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/skills/content-layer/scripts/validate-content-patterns.sh \"$CLAUDE_FILE_PATH\""
					},
					{
						"type": "command",
						"command": ".claude/skills/component-layer/scripts/validate-component-patterns.sh \"$CLAUDE_FILE_PATH\""
					},
					{
						"type": "command",
						"command": ".claude/skills/page-layer/scripts/validate-page-patterns.sh \"$CLAUDE_FILE_PATH\""
					}
				]
			}
		]
	}
}
